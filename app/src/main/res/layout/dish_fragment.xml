<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Dish"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/dishName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_weight="0.45"
            android:autofillHints=""
            android:ems="10"
            android:hint="@string/dish"
            android:inputType="textAutoCorrect|textPersonName|textCapSentences"
            android:minHeight="48dp"
            android:textColor="?textColor"
            android:textColorHint="#757575"
            android:textSize="18sp"
            android:textStyle="normal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/mass"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginTop="3dp"
                android:layout_weight="0.2"
                android:autofillHints=""
                android:ems="10"
                android:hint="@string/mass"
                android:inputType="number"
                android:textColor="?textColor"
                android:textColorHint="#757575"
                tools:ignore="TouchTargetSizeCheck" />

            <EditText
                android:id="@+id/calories"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginTop="3dp"
                android:layout_weight="0.2"
                android:autofillHints=""
                android:ems="10"
                android:hint="@string/calories"
                android:inputType="number"
                android:textColor="?textColor"
                android:textColorHint="#757575"
                tools:ignore="TouchTargetSizeCheck" />
        </LinearLayout>


        <Button
            android:id="@+id/addDish"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:layout_weight="0.35"
            android:background="#006064"
            android:text="@string/AddDish"
            android:textColor="?textColor"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:textStyle="normal"
            android:visibility="visible"
            app:backgroundTint="@color/secondary_main"
            app:cornerRadius="8dp"
            app:rippleColor="#FDAAAAAA"
            app:strokeColor="#000000"
            app:strokeWidth="2dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/cardview_shadow_start_color"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>