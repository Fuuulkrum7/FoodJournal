<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Journal" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_main</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/primary_light</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_main</item>
        <item name="colorSecondaryVariant">@color/secondary_light</item>
        <item name="colorOnSecondary">@color/secondary_dark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="mainBackground">@color/background</item>
        <item name="BreakfastView">@color/primaryLightColor</item>
        <item name="LunchView">@color/primaryLightColor</item>
        <item name="DinnerView">@color/secondaryLightColor</item>
        <item name="OtherView">@color/secondaryLightColor</item>
        <item name="navBackground">@color/primaryLightColor</item>
        <item name="textColor">@color/secondary_text</item>
    </style>
</resources>